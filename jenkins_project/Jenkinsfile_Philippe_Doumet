pipeline {
    agent any

    environment {
        PROJECT_DIR = 'jenkins_project'
        VIRTUAL_ENV = 'venv'
        PYTHON = 'C:\\Users\\doume\\AppData\\Local\\Programs\\Python\\Python312\\python.exe'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    def venvPath = "${env.WORKSPACE}\\${PROJECT_DIR}\\${VIRTUAL_ENV}"
                    if (!fileExists(venvPath)) {
                        bat "\"${PYTHON}\" -m venv ${PROJECT_DIR}\\${VIRTUAL_ENV}"
                    }
                    bat """
                    cd ${PROJECT_DIR}
                    call ${VIRTUAL_ENV}\\Scripts\\activate
                    pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                bat """
                cd ${PROJECT_DIR}
                call ${VIRTUAL_ENV}\\Scripts\\activate
                flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                cd ${PROJECT_DIR}
                call ${VIRTUAL_ENV}\\Scripts\\activate
                set PYTHONPATH=%cd%
                pytest
                """
            }
        }

        stage('Coverage') {
            steps {
                bat """
                cd ${PROJECT_DIR}
                call ${VIRTUAL_ENV}\\Scripts\\activate
                set PYTHONPATH=%cd%
                coverage run -m pytest
                coverage report
                """
            }
        }

        stage('Security Scan') {
    steps {
        bat """
        cd ${PROJECT_DIR}
        call ${VIRTUAL_ENV}\\Scripts\\activate
        set PYTHONIOENCODING=utf-8
        bandit -r . -f json -o bandit-report.json --exit-zero
        """
    }
}




        stage('Deploy') {
            steps {
                // super simple "deployment"
                // in a real case you'd copy files or call a script
                bat """
                cd ${PROJECT_DIR}
                echo Deploying application...
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
