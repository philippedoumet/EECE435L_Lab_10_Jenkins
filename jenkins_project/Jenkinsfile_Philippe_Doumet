pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        // change this to whatever `where python` shows on your machine
        PYTHON = 'C:\\Users\\doume\\AppData\\Local\\Programs\\Python\\Python312\\python.exe'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // create venv if it doesn't exist
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "\"${PYTHON}\" -m venv ${VIRTUAL_ENV}"
                    }
                    // activate venv and install requirements
                    bat """
                    call ${VIRTUAL_ENV}\\Scripts\\activate
                    pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                bat """
                call ${VIRTUAL_ENV}\\Scripts\\activate
                flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                call ${VIRTUAL_ENV}\\Scripts\\activate
                pytest
                """
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
