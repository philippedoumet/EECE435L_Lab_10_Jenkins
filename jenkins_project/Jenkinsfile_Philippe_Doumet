pipeline {
    agent any

    environment {
        PROJECT_DIR = 'jenkins_project'
        VIRTUAL_ENV = 'venv'
        // you said this exists:
        PYTHON = 'C:\\Users\\doume\\AppData\\Local\\Programs\\Python\\Python312\\python.exe'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // venv will live inside jenkins_project\venv
                    def venvPath = "${env.WORKSPACE}\\${PROJECT_DIR}\\${VIRTUAL_ENV}"

                    if (!fileExists(venvPath)) {
                        bat "\"${PYTHON}\" -m venv ${PROJECT_DIR}\\${VIRTUAL_ENV}"
                    }

                    // now install requirements from INSIDE jenkins_project
                    bat """
                    cd ${PROJECT_DIR}
                    call ${VIRTUAL_ENV}\\Scripts\\activate
                    pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                bat """
                cd ${PROJECT_DIR}
                call ${VIRTUAL_ENV}\\Scripts\\activate
                flake8 app.py
                """
            }
        }

        stage('Test') {
            steps {
                bat """
                cd ${PROJECT_DIR}
                call ${VIRTUAL_ENV}\\Scripts\\activate
                pytest
                """
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
